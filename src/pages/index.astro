---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import LinkGroup from "@components/LinkGroup.astro";
---

<Layout title="Maddie's Linktree">
  <canvas id="stars"></canvas>
  
  <Container>
    <h1>Maddie's Linktree</h1>
    <LinkGroup/>
  </Container>
</Layout>

<script is:inline src="/scripts/stars.js"></script>

<style>
  body {
    width: 100%;
    min-height: 100vh;
    background-color: #9dde35;
    background-image:
      radial-gradient(circle at top right, rgba(121, 68, 154, 0.13), transparent),
      radial-gradient(circle at 20% 80%, rgba(41, 196, 255, 0.13), transparent);
    margin: 0;
    overflow-x: hidden;
  }

  canvas#stars {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -1;
  }

  h1 {
    color: #005490;
    margin-bottom: 1.5rem;
    font-family: Arial, sans-serif;
  }

  :global(a) {
    color: #005490;
    text-decoration: none;
  }

  :global(a:hover) {
    color: #003d6b;
  }
</style>

